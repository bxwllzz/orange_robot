<robot name="orange_robot">

    <material name="orange">
        <color rgba="1 0.5 0.25 .7" />
    </material>
    <material name="gray">
        <color rgba="0.5 0.5 0.5 .7" />
    </material>
    <material name="blue">
        <color rgba="0 0 0.7 .7" />
    </material>
    <material name="black">
        <color rgba="0 0 0 .7" />
    </material>

    <link name="base_footprint" />

    <joint name="footprint_to_base" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.036" rpy="0 0 0" />
    </joint>

    <link name="base_link">
        <visual>
            <geometry>
                <cylinder radius="0.145" length="0.003"/>
            </geometry>
            <material  name="orange" />
        </visual>
    </link>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.068" length="0.023"/>
            </geometry>
            <material  name="gray" />
        </visual>
    </link>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.068" length="0.023"/>
            </geometry>
            <material  name="gray" />
        </visual>
    </link>

    <joint name="base_to_left_wheel" type="fixed">
        <parent link="base_link" />
        <child link="left_wheel" />
        <origin xyz="0 0.145 0.032" rpy="-1.57 0 0" />
    </joint>

    <joint name="base_to_right_wheel" type="fixed">
        <parent link="base_link" />
        <child link="right_wheel" />
        <origin xyz="0 -0.145 0.032" rpy="1.57 0 0" />
    </joint>

    <link name="imu_link">
        <visual>
            <geometry>
                <box size="0.005 0.005 0.001" />
            </geometry>
            <material  name="blue" />
        </visual>
    </link>

    <joint name="base_to_imu" type="fixed">
        <parent link="base_link" />
        <child link="imu_link" />
        <origin xyz="0.02 0.02 0.015" rpy="0 0 3.14" />
    </joint>

    <link name="kinect_link">
        <visual>
            <geometry>
                <box size="0.06 0.2 0.025" />
            </geometry>
            <material  name="black" />
        </visual>
    </link>

    <joint name="base_to_kinect" type="fixed">
        <parent link="base_link" />
        <child link="kinect_link" />
        <origin xyz="-0.1 0.03 0.15" rpy="0 0 0" />
    </joint>
</robot>